<title><%= trail.trailName %></title>

<div class="container-fluid trail-index-background-image">

  <div class="row park-name">
    <h1><strong> <%= trail.trailName %> </strong></h1>
  </div>

  <div class="row trail-margin-top">
    <div class="col-lg-6">
      <ul>
          <li>
            <h3 class="white-text"> Length: <%= trail.trailLength %> </h3>
          </li>
          <li>
            <h3 class="white-text"> Difficulty: <%= trail.trailDiff %> </h3>
          </li>
          <li>
            <h3 class="white-text"> Type: <%= trail.trailType %> </h3>
          </li>
          <li>
            <h3 class="white-text"> Fees: <%= trail.trailFees %> </h3>
          </li>
      </ul>
    </div>

    <div class="col-lg-6">
      <img class="map-height" src="<%= trail.trailMap %>">
    </div>
  </div>

  <div class="row trail-description">
    <h4> <%= trail.trailDesc %> </h4>
  </div>

</div>

<% if (user) {%>
<div class="container-fluid upload-picture-stuff">
  <div class="row">
    <form action="/trails/<%= trail._id %>" method="post" enctype="multipart/form-data">

      <div>
        <label for="picture-input"> Picture </label>
        <input id="picture-input" type="file" name="picture">
      </div>
      <br>
      <button type="submit"> Add Picture </button>
    </form>
  </div>
</div>
<% } %>



<div class="row div-top-border">
    <ul>
      <% trail.trailPhotos.forEach((oneTrail) => { %>
        <div class="col-md-4">
        <li>
          <img class="image-size-restriction" src="<%= oneTrail %>">
        </li>
      </div>
        <% }) %>
    </ul>
  </div>
